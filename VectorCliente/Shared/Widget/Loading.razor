<SfDialog Width="50px" Target="#target" IsModal="true" @bind-Visible="Visibilidad">
    <DialogTemplates>
        <Content>
            <div class="d-flex justify-content-center">
                <img src="/icons/loading.gif" style="height: 15vh; width: 15vh" />
            </div>
        </Content>
    </DialogTemplates>
    <DialogAnimationSettings Effect="@DialogEffect.FadeZoom"></DialogAnimationSettings>
</SfDialog>

@code {
    [Parameter]
    public bool Visibilidad { get; set; }
}
